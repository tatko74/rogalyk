PROC DLset(byte dl)
BYTE TEMP

TEMP=peek($022F)
poke($022F,0)
pokec($230,$9500)

if  dl=1 then
moveblock($9500,DL1,36)
setblock($9530,740,0)
moveblock($9530,Pic1,640)
elseif dl=2 then
moveblock($9500,DL2,29)
setblock($9530,540,0)
moveblock($960C,Pic2,320)
fi

poke($022F,TEMP)

return

